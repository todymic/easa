{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block content %}
    <h1>User index</h1>

    <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="th-sm">Id</th>
                <th class="th-sm">Email</th>
                <th class="th-sm">Roles</th>
                <th class="th-sm">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-dark-green" href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a class="btn btn-sm btn-dark-danger" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('user_new') }}">{{ 'link.create.user'|trans }}</a>
    {% endif %}
{% endblock %}
