{{ form_start(registrationForm, {
    'attr' : {
        'action' : path('app_register'),
        'class' : 'registration_form'
    }
}) }}


<div class="modal-body">
    <div class="row">
        <div class="col"><div class="md-form form-sm mb-5">
                <i class="fas fa-user prefix"></i>
                {{ form_widget(registrationForm.lastname, {
                    'attr' : {
                        'class' : 'form-control-sm validate'
                    }
                }) }}
                {{  form_label(registrationForm.lastname, 'form.input.lastname', {
                    'label_attr': {
                        'data-error' : 'form.text.wrong'|trans,
                        'data-success' : 'form.text.valid'|trans
                    }
                }) }}
            </div></div>
        <div class="col"><div class="md-form form-sm mb-5">
                {{ form_widget(registrationForm.firstname, {
                    'attr' : {
                        'class' : 'form-control-sm validate'
                    }
                }) }}
                {{  form_label(registrationForm.firstname, 'form.input.firstname' , {
                    'label_attr': {
                        'data-error' : 'form.text.wrong'|trans,
                        'data-success' : 'form.text.valid'|trans
                    }
                }) }}
            </div></div>
    </div>


    <div class="md-form form-sm mb-5">
        <i class="fas fa-home prefix"></i>
        {{ form_widget(registrationForm.adresse, {
            'attr' : {
                'class' : 'form-control-sm validate'
            }
        }) }}
        {{  form_label(registrationForm.adresse, 'form.input.adresse',{
            'label_attr': {
                'data-error' : 'form.text.wrong'|trans,
                'data-success' : 'form.text.valid'|trans
            }
        }) }}
    </div>
    <div class="md-form form-sm mb-5">
        <i class="fas fa-city prefix"></i>
        {{ form_widget(registrationForm.city, {
            'attr' : {
                'class' : 'form-control-sm validate'
            }
        }) }}
        {{  form_label(registrationForm.city, 'form.input.city',{
            'label_attr': {
                'data-error' : 'form.text.wrong'|trans,
                'data-success' : 'form.text.valid'|trans
            }
        }) }}
    </div>
    <div class="md-form form-sm mb-5">

        {{ form_widget(registrationForm.country, {
            'attr' : {
                'class' : 'form-control-sm validate'
            }
        }) }}
        {{  form_label(registrationForm.country, 'form.input.country', {
            'label_attr': {
                'data-error' : 'form.text.wrong'|trans,
                'data-success' : 'form.text.valid'|trans
            }
        }) }}
    </div>
    <div class="md-form form-sm mb-5">
        <i class="fas fa-phone prefix"></i>
        {{ form_widget(registrationForm.phone, {
            'attr' : {
                'class' : 'form-control-sm validate'
            }
        }) }}
        {{  form_label(registrationForm.phone, 'form.input.phone', {
            'label_attr': {
                'data-error' : 'form.text.wrong'|trans,
                'data-success' : 'form.text.valid'|trans
            }
        }) }}
    </div>

    <div class="md-form form-sm mb-5">
        <i class="fas fa-envelope prefix"></i>
        {{ form_widget(registrationForm.email, {
            'attr' : {
                'class' : 'form-control-sm validate'
            }
        }) }}
        {{  form_label(registrationForm.email, 'form.input.email', {
            'label_attr': {
                'data-error' : 'form.text.wrong'|trans,
                'data-success' : 'form.text.valid'|trans
            }
        }) }}
    </div>

    <div class="md-form form-sm mb-5">
        <i class="fas fa-lock prefix"></i>
        {{ form_widget(registrationForm.plainPassword.first, {
            'attr' : {
                'class' : 'form-control-sm validate'
            }
        }) }}
        {{  form_label(registrationForm.plainPassword.first, 'form.input.password', {
            'label_attr': {
                'data-error' : 'form.text.wrong'|trans,
                'data-success' : 'form.text.valid'|trans
            }
        }) }}
    </div>

    <div class="md-form form-sm mb-4">
        <i class="fas fa-lock prefix"></i>
        {{ form_widget(registrationForm.plainPassword.second, {
            'attr' : {
                'class' : 'form-control-sm validate'
            }
        }) }}
        {{  form_label(registrationForm.plainPassword.second, 'form.input.repeatpassword', {
            'label_attr': {
                'data-error' : 'form.text.wrong'|trans,
                'data-success' : 'form.text.valid'|trans
            }
        }) }}


    </div>


    {{form_row(registrationForm.agreeTerms) }}

    <div class="text-center form-sm mt-2">
        <button id="#registrationSubmit" class="btn btn-info">{{ 'form.submit.signup'|trans }}</button>
    </div>

</div>
<!--Footer-->
<div class="modal-footer">
    <div class="options text-right">
        <p class="pt-1">{{ 'form.text.already_member'|trans }} <a href="#" class="blue-text">{{ 'form.link.here'|trans }}</a></p>
    </div>
    <button type="button" class="btn btn-outline-info waves-effect ml-auto" data-dismiss="modal">{{ 'form.submit.close'|trans }}</button>
</div>
{{ form_end(registrationForm) }}

