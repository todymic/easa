<form method="post">
    <div class="modal-body mb-1">

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="text-center">
            <p>{{ 'form.text.sign_with'|trans }}:</p>
            <a type="button" class="btn-floating btn-sm btn-fb mx-2" data-toggle="tooltip" title="{{ 'form.link.facebook'|trans }}">
                <i class="fab fa-facebook-f"></i>
            </a>
            <a type="button" class="btn-floating btn-sm btn-google-blue mx-2" data-toggle="tooltip" title="{{ 'form.link.gmail'|trans }}">
                <i class="fab fa-google"></i>
            </a>
            <a type="button" class="btn-floating btn-sm btn-li mx-2" data-toggle="tooltip" title="{{ 'form.link.linkdin'|trans }}">
                <i class="fab fa-linkedin-in"></i>
            </a>
            <a type="button" class="btn-floating btn-sm btn-git mx-2" data-toggle="tooltip" title="{{ 'form.link.github'|trans }}">
                <i class="fab fa-github"></i>
            </a>
        </div>

        <div class="md-form form-sm mb-5">
            <i class="fas fa-envelope prefix"></i>
            <input type="email" value="{{ last_username }}" name="email"  id="inputEmail" class="form-control form-control-sm validate" required>
            <label data-error="wrong" data-success="right" for="inputEmail">{{ 'form.input.email'|trans }}</label>
        </div>

        <div class="md-form form-sm mb-4">
            <i class="fas fa-lock prefix"></i>
            <input type="password" name="password" id="inputPassword" class="form-control form-control-sm validate" required>
            <label data-error="wrong" data-success="right" for="inputPassword">{{ 'form.input.password'|trans }}</label>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <div class="d-flex justify-content-between">
            <div>
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" name="_remember_me" class="custom-control-input" id="defaultLoginFormRemember">
                    <label class="custom-control-label" for="defaultLoginFormRemember"> {{ 'form.label.remember_me'|trans }}</label>
                </div>
            </div>
        </div>

        <div class="text-center mt-2">
            <button class="btn btn-info">{{ 'form.submit.login'|trans }} </button>
        </div>

